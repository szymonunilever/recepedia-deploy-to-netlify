{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "baseUrl": "./",
    "rootDirs": ["src", "src/components/lib/stories"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "public", ".cache"]
}

{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "baseUrl": "./",
    "rootDirs": ["src"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
